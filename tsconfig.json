{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": false,
    "noImplicitUseStrict": false,
    "sourceMap": true
  },
  "include": {
    "typings/index.d.ts"
  },

  "exclude": [
    "node_modules",
    "typings/browser",
    "typings/browser.d.ts"
  ],

  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  },

  "filesGlob": [
    "./lib/**/*.ts",
    "./generators/**/*.ts",
    "!./node_modules/**/*.ts"
  ],

  "files": [
    "./typings/index.d.ts"
  ]
}
